@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<ProductViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Food Menu</h5>
            <h1 class="mb-5">Most Popular Items</h1>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active pb-2">
                    @foreach (var item in Model)
                    {
                        <div class="row g-4">
                            <div class="col-lg-12 pt-2">
                                <div class="d-flex align-items-center">
                                    @if (item.ImageURL != null)
                                    {
                                        <img class="flex-shrink-0 img-fluid rounded" src="~/upload_img/@item.ImageURL" alt="" style="width: 80px;">
                                    }
                                    else
                                    {
                                        <img class="flex-shrink-0 img-fluid rounded" src="~/upload_img/default_food.png" alt="" style="width: 80px;">
                                    }
                                    <div class="w-100 d-flex flex-column text-start ps-4">
                                        <h5 class="d-flex justify-content-between border-bottom pb-2">
                                            <span>@item.Description</span>
                                            <span class="text-primary">$@item.Price</span>
                                        </h5>
                                        <small class="fst-italic">@item.Name</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @Html.PagedListPager(Model, page => Url.Action("Index", "Menu", new { page }), new PagedListRenderOptions
           {
               LiElementClasses = new List<string> { "page-link" }
           })
            </div>
        </div>
    </div>
</div>
