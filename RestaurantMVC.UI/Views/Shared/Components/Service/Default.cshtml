@model List<ServiceViewModel>

<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service-item rounded pt-3">
                        <div class="p-4">
                            @if (item.Logo != null)
                            {
                                <img class="img-fluid pb-2" src="~/upload_img/@item.Logo" alt="@item.Title" style="width:200px; height:150px;">
                            }
                            else
                            {
                                <img class="img-fluid pb-2" src="~/upload_img/default_service.jpg" alt="@item.Title" style="width:200px; height:150px;">
                            }
                            <h5>@item.Title</h5>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>