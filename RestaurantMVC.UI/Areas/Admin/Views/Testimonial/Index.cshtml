@model IEnumerable<TestimonialViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Testimonials</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Title</th>
            <th>Comment</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Title</td>
                <td>@item.Comment</td>
                <td><a asp-area="Admin" asp-controller="Testimonial" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
