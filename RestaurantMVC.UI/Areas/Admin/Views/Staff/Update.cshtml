@model StaffViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">Update Staff</h3>
    </div>
    <div class="block-content">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <form asp-area="Admin" asp-controller="Staff" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label asp-for="FirstName" class="form-label" for="one-ecom-product-name"></label>
                        <input type="text" class="form-control" id="one-ecom-product-name" name="FirstName" asp-for="FirstName">
                    </div>
                    <div class="mb-4">
                        <label asp-for="LastName" class="form-label" for="one-ecom-product-name"></label>
                        <input type="text" class="form-control" id="one-ecom-product-name" name="LastName" asp-for="LastName">
                    </div>
                    <div class="mb-4">
                        <label asp-for="Title" class="form-label" for="one-ecom-product-name"></label>
                        <input type="text" class="form-control" id="one-ecom-product-price" name="Title" asp-for="Title">
                    </div>
                    <div class="mb-4">
                        <label asp-for="SocialMedia1" class="form-label" for="one-ecom-product-name"></label>
                        <input type="text" class="form-control" id="one-ecom-product-price" name="SocialMedia1" asp-for="SocialMedia1">
                    </div>
                    <div class="mb-4">
                        <label asp-for="SocialMedia2" class="form-label" for="one-ecom-product-name"></label>
                        <input type="text" class="form-control" id="one-ecom-product-price" name="SocialMedia2" asp-for="SocialMedia2">
                    </div>
                    <div class="mb-4">
                        <label asp-for="SocialMedia3" class="form-label" for="one-ecom-product-name"></label>
                        <input type="text" class="form-control" id="one-ecom-product-price" name="SocialMedia3" asp-for="SocialMedia3">
                    </div>
                    <div class="mb-4">
                        <input type="file" asp-for="ImageURL" class="form-control">
                        @if (Model.ImageURL != null)
                        {
                            <img src="~/upload_img/@Model.ImageURL" class="form-control" alt="@Model.Title" style="max-width: 200px; max-height: 200px;" />
                        }
                        else
                        {
                            <img src="~/upload_img/default.png" class="form-control" alt="@Model.Title" style="max-width: 200px; max-height: 200px;" />
                        }
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <button type="submit" class="btn btn-alt-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>